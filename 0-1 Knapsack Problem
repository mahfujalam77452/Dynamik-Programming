#include <bits/stdc++.h>
using namespace std;

int knapSack(int W, int wt[], int val[], int n)
{
   int i,w;
   int A[n+1][W+1];
   for( i=0;i<=n;i++){
       for(w=0;w<=W;w++){
           if(i==0||w==0){
               A[i][w]=0;
           }
           else if(w>=wt[i-1])
                A[i][w]=max(A[i-1][w],val[i-1]+A[i-1][w-wt[i-1]]);
           else 
              A[i][w]=A[i-1][w];
       }
   }
   return A[n][W];

}


int main()
{
	int profit[] = { 60, 100, 120 };
	int weight[] = { 30,20,10 };
	int W = 50;
	int n = sizeof(profit) / sizeof(profit[0]);

	cout << knapSack(W, weight, profit, n);

	return 0;
}

